{
  "name": "Alert",
  "type": "object",
  "properties": {
    "titulo": {
      "type": "string",
      "description": "Título do alerta"
    },
    "descricao": {
      "type": "string",
      "description": "Descrição detalhada do alerta"
    },
    "tipo": {
      "type": "string",
      "enum": [
        "incendio",
        "fumaca_intensa",
        "temperatura_extrema",
        "seca",
        "preditivo"
      ],
      "description": "Tipo de alerta"
    },
    "nivel_criticidade": {
      "type": "string",
      "enum": [
        "baixo",
        "medio",
        "alto",
        "critico"
      ],
      "description": "Nível de criticidade do alerta"
    },
    "regiao": {
      "type": "string",
      "description": "Região afetada"
    },
    "estado": {
      "type": "string",
      "description": "Estado afetado"
    },
    "latitude": {
      "type": "number",
      "description": "Latitude do alerta"
    },
    "longitude": {
      "type": "number",
      "description": "Longitude do alerta"
    },
    "recomendacoes": {
      "type": "string",
      "description": "Recomendações de ação"
    },
    "status": {
      "type": "string",
      "enum": [
        "ativo",
        "monitorando",
        "resolvido"
      ],
      "default": "ativo",
      "description": "Status do alerta"
    },
    "data_inicio": {
      "type": "string",
      "format": "date-time",
      "description": "Data de início do alerta"
    },
    "data_fim": {
      "type": "string",
      "format": "date-time",
      "description": "Data de resolução do alerta"
    },
    "notificacao_enviada": {
      "type": "boolean",
      "default": false,
      "description": "Se notificação foi enviada"
    }
  },
  "required": [
    "titulo",
    "tipo",
    "nivel_criticidade",
    "regiao",
    "status"
  ]
}